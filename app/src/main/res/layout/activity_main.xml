<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:text="Calcule quanto tempo falta para sua aposent
adoria !"
        android:textSize="16sp" />

    <TextView
        android:layout_editor_absoluteX="0dp"
        android:layout_editor_absoluteY="154dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha o sexo:" />

    <Spinner
        android:id="@+id/spn_sexo"
        android:layout_editor_absoluteX="-122dp"
        android:layout_editor_absoluteY="154dp"
        android:layout_width="262dp"
        android:layout_height="wrap_content"></Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite sua idade:"
        android:layout_editor_absoluteX="0dp"
        android:layout_editor_absoluteY="59dp" />

    <EditText
        android:id="@+id/txt_idade"
        android:layout_editor_absoluteX="0dp"
        android:layout_editor_absoluteY="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_resultado"
        />

    <Button
        android:id="@+id/btn_calcular"
        android:layout_editor_absoluteX="35dp"
        android:layout_editor_absoluteY="213dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular" />

</LinearLayout>